<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>ShoppingDemo</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>index</servlet-name>
  	<servlet-class>com.itcast.session.ListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>index</servlet-name>
  	<url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>buy</servlet-name>
  	<servlet-class>com.itcast.session.BuyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>buy</servlet-name>
  	<url-pattern>/buy</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>car</servlet-name>
  	<servlet-class>com.itcast.session.CarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>car</servlet-name>
  	<url-pattern>/car</url-pattern>
  </servlet-mapping>
</web-app>